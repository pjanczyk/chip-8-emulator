<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/keyboard_button_background"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    android:gravity="center"
    tools:layout_height="80dp"
    tools:layout_width="80dp">

    <TextView
        android:id="@+id/text_button_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/yuji_oshimoto_04b03"
        android:gravity="center"
        android:textColor="@color/keyboard_button_name_color"
        android:textSize="36sp"
        tools:text="6" />

    <TextView
        android:id="@+id/text_button_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="10dp"
        android:textColor="@color/keyboard_button_description_color"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        tools:text="drop" />

</FrameLayout>